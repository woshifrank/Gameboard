<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head') %>
  <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
  <link href="/public/assets/group-edit.css" rel="stylesheet" type="text/css">
</head>
<body>
    <header>
        <%- include('../partials/nav', {email: user.email }) %>
    </header>
    <div class = "hero-image">
        <div class = "hero-text">
            <div class = "header1"><h1>Modify the Gameboard</h1></div>
            <div class="field is-horizontal">
                <div class="field-label is-large">
                  <label class="label">Change Group Name and Game</label>
                </div>
                <div class="field-body">
                  <div class="field group-name-input">
                    <p class="control has-icons-left">
                      <input class="input" type="text" placeholder="Enter a name for your Gameboard">
                      <span class="icon is-small is-left">
                        <i class="fa fa-group"></i>
                      </span>
                    </p>
                  </div>
                  <div class="field game-name-input">
                    <p class="control has-icons-left">
                      <input class="input" type="text" placeholder="Enter the video game name">
                      <span class="icon is-small is-left">
                        <i class="fa fa-gamepad"></i>
                      </span>
                    </p>
                  </div>
                </div>
            </div>
            <div class="field is-horizontal">
              <div class="field-label is-large">
                <label class="label">Game Type</label>
              </div>
              <div class="field-body">
                <div class="field is-narrow">
                  <div class="control">
                    <div class="select is-fullwidth">
                      <select>
                        <option>Real-time Strategy(RTS)</option>
                        <option>Shooters(FPS and TPS)</option>
                        <option>MOBA</option>
                        <option>RPG,ARPG</option>
                        <option>Survival and Horror</option>
                        <option>Action-Adventure</option>
                        <option>Simulation and Sports</option>
                        <option>Sandbox</option>
                        <option>Other</option>
                      </select>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="field is-horizontal">
              <div class="field-label is-large">
                <label class="label">Gameboard Slogan</label>
              </div>
              <div class="field-body">
                <div class="field group-slogan-input">
                  <p class="control has-icons-left">
                    <input class="input" type="text" placeholder="A welcoming slogan">
                    <span class="icon is-small is-left">
                      <i class="material-icons">&#xe264;</i>
                    </span>
                  </p>
                </div>
              </div>
            </div>

            <div class="field is-horizontal">
              <div class="field-label is-large">
                <label class="label">Gameboard Intro</label>
              </div>
              <div class="field-body">
                <div class="field group-slogan-input">
                  <p class="control has-icons-left">
                    <textarea class="textarea" placeholder="Please enter a short intro for your Gameboard"></textarea>
                  </p>
                </div>
              </div>
            </div>

            <div class="field is-horizontal group-buttons">
              <div class="field-label">
                <!-- Left empty for spacing -->
              </div>
              <div class="field-body">
                <div class="field is-grouped">
                  <div class="control">
                    <button class="button is-link">Submit</button>
                  </div>
                  <div class="control">
                    <button class="button is-link is-light">Cancel</button>
                  </div>
                </div>
              </div>
            </div>
        </div>
    </div>
    
</body>
<script>

</script>
</html>
